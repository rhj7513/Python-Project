        "import random\n",
        "\n",
        "lotto=[]\n",
        "i=0\n",
        "\n",
        "while i<7:\n",
        "    num = random.randint(1, 45)   #랜덤숫자 생성\n",
        "    pass1 = 1\n",
        "    for j in lotto:               #겹치는 숫자 발생하면 멈추는 반복문\n",
        "        if num == j:\n",
        "            pass1 = 0\n",
        "            break\n",
        "\n",
        "    if pass1:                     #겹치지 않는 숫자는 lotto에 저장\n",
        "        lotto += [num]\n",
        "        i += 1"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "def random1():\n",
        "\n",
        "\n",
        "    print('----------1등-----------')\n",
        "    for i in range(len(lotto)-1):\n",
        "        print(lotto[i], end=' ')\n",
        "    print()\n",
        "\n",
        "    print('----------2등-----------')\n",
        "    for i in range(len(lotto)-1):\n",
        "        for j in range(6):\n",
        "            if i == j:\n",
        "                print(lotto[6], end=' ')\n",
        "            else:\n",
        "                print(lotto[j], end=' ')\n",
        "    print()\n",
        "\n",
        "    print('----------3등-----------')\n",
        "    for i in range(len(lotto)-1):\n",
        "        for j in range(6):\n",
        "            if i == j:\n",
        "                print('X', end=' ')\n",
        "            else:\n",
        "                print(lotto[j], end=' ')\n",
        "    print()\n",
        "\n",
        "    print('----------4등-----------')\n",
        "    for i in range(len(lotto)-1):\n",
        "        for j in range(i+1, len(lotto)+1):\n",
        "            for k in range(6):\n",
        "                if k == i:\n",
        "                    print('X', end=' ')\n",
        "                elif k == j:\n",
        "                    print('X', end=' ')\n",
        "                else:\n",
        "                    print(lotto[k], end=' ')\n",
        "    print()\n",
        "\n",
        "    print('----------5등-----------')\n",
        "    for i in range(len(lotto)-1):\n",
        "        for j in range(i+1, len(lotto)+1):\n",
        "            for k in range(j+1, len(lotto)-1):\n",
        "                for g in range(len(lotto)-1):\n",
        "                    if g == i:\n",
        "                        print('X', end=' ')\n",
        "                    elif g == j:\n",
        "                        print('X', end=' ')\n",
        "                    elif g == k:\n",
        "                        print('X', end=' ')\n",
        "                    else:\n",
        "                        print(lotto[g], end=' ') \n",
        "    print()\n"
      ],
